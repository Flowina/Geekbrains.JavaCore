<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<?import java.net.URL?>
<GridPane fx:controller="calculator.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="5" vgap="5"
>
    <stylesheets>
        <URL value="@/css/style.css"/>
    </stylesheets>
    <Button fx:id="btn0" text="0" onAction="#onBtnClick" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Button fx:id="btn1" text="1" onAction="#onBtnClick" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Button fx:id="btn2" text="2" onAction="#onBtnClick" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
    <Button fx:id="btn3" text="3" onAction="#onBtnClick" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Button fx:id="btn4" text="4" onAction="#onBtnClick" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Button fx:id="btn5" text="5" onAction="#onBtnClick" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
    <Button fx:id="btn6" text="6" onAction="#onBtnClick" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button fx:id="btn7" text="7" onAction="#onBtnClick" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Button fx:id="btn8" text="8" onAction="#onBtnClick" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
    <Button fx:id="btn9" text="9" onAction="#onBtnClick" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <Button fx:id="btnPlus" text="+" onAction="#onBtnClick" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Button fx:id="btnMinus" text="-" onAction="#onBtnClick" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
    <Button fx:id="btnMult" text="*" onAction="#onBtnClick" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <Button fx:id="btnDiv" text="/" onAction="#onBtnClick" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <Button fx:id="btnClear" text="C" onAction="#onBtnClearClick" GridPane.rowIndex="4" GridPane.columnIndex="2"
        id="btnClear"/>
    <Button fx:id="btnRun" text="=" onAction="#onBtnCalcClick"
            GridPane.rowIndex="0" GridPane.columnIndex="3"
            GridPane.rowSpan="5" GridPane.hgrow="ALWAYS"
            maxHeight="Infinity"
            maxWidth="Infinity"
            disable="true"
    />
    <TextField fx:id="txtResult" editable="false"
               GridPane.rowIndex="5" GridPane.columnIndex="0"
               GridPane.columnSpan="4" GridPane.hgrow="ALWAYS" maxHeight="Infinity"
    />
</GridPane>